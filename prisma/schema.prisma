
generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int @id @default(autoincrement())
  clerkId String @unique
  email String @unique
  firstName String?
  lastName String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}